#include <iostream>
using namespace std;

class Person {
public:
    string name;
    int age;

    void getPerson() {
        cout << "Enter Name and Age: ";
        cin >> name >> age;
    }
};

class Student : public Person {
public:
    int roll;
    void getStudent() {
        cout << "Enter Roll No: ";
        cin >> roll;
    }

    void display() {
        cout << "\nName: " << name << ", Age: " << age << ", Roll No: " << roll << endl;
    }
};

int main() {
    Student s;
    s.getPerson();
    s.getStudent();
    s.display();
    return 0;
}

#include <iostream>
using namespace std;

class Student {
protected:
    int roll;
public:
    void getRoll() {
        cout << "Enter Roll No: ";
        cin >> roll;
    }
};

class Marks {
protected:
    int marks;
public:
    void getMarks() {
        cout << "Enter Marks: ";
        cin >> marks;
    }
};

class Result : public Student, public Marks {
public:
    void display() {
        cout << "\nRoll No: " << roll << ", Marks: " << marks << endl;
    }
};

int main() {
    Result r;
    r.getRoll();
    r.getMarks();
    r.display();
    return 0;
}   

